{
	"name": "recently-read",
	"version": "1.1.0",
	"description": "A Goodreads-powered book list microservice",
	"license": "MIT",
	"private": true,
	"repository": "chrisvogt/recently-read",
	"author": {
		"name": "Chris Vogt",
		"email": "mail@chrisvogt.me",
		"url": "https://www.chrisvogt.me"
	},
	"engines": {
		"node": ">=8"
	},
	"scripts": {
		"coverage": "nyc npm run unit",
		"dev": "micro-dev",
		"lint": "xo --env=node --env=mocha",
		"start": "micro --listen tcp://127.0.0.1:3001",
		"test": "npm run lint && npm run unit",
		"report-coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
		"unit": "mocha ./**/*.test.js"
	},
	"files": [
		"index.js",
		"transform-book.js"
	],
	"keywords": [
		"api",
		"books",
		"goodreads",
		"google-books",
		"literature",
		"microservice",
		"read",
		"read-list",
		"reading"
	],
	"dependencies": {
		"control-access": "^0.1.1",
		"etag": "^1.8.1",
		"micro": "^9.3.3",
		"proxyquire": "^2.1.0",
		"sinon": "^7.3.2",
		"to-https": "^1.0.2",
		"xml2js": "^0.4.19"
	},
	"devDependencies": {
		"ava": "^1.4.1",
		"chai": "^4.2.0",
		"codecov": "^3.0.0",
		"delay": "^4.1.0",
		"expect": "^24.8.0",
		"got": "^9.3.1",
		"micro-dev": "^3.0.0",
		"mocha": "^10.2.0",
		"nock": "^10.0.1",
		"nyc": "^14.1.0",
		"test-listen": "^1.1.0",
		"xo": "^0.24.0"
	},
	"nyc": {
		"reporter": [
			"lcov",
			"text"
		]
	},
	"xo": {
		"space": true
	}
}
